<!DOCTYPE html>
<html>
  <head>
    <title>Perseus</title>
    <meta http-equiv='Content-Type' content='text/html; charset=utf-8'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <style>
      .modal-dialog {
        width: inherit !important;
      }
      .modal-body {
        overflow-x: auto;
      }
      .tooltip-inner {
        max-width: inherit;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Trace</a>
      </div>
      <div class="collapse navbar-collapse">
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" name="sentence" placeholder="Search" value="<%= sentence %>">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </nav>
    <% if (sentence) { -%>
      <table>
        <tr>
          <% tokens.forEach(function(token, i) { -%>
            <td style="vertical-align:top">
              <table class="table table-hover">
                <thead>
                  <tr><th><a href="#token-<%= i %>" data-toggle="modal" class="btn btn-default btn-block"><%= token %></a></th></tr>
                </thead>
                <tbody>
                  <% labelss[i].forEach(function(label, j) { -%>
                    <tr class="<%= label == labels[i] ? 'success' : '' %>">
                      <td>
                        <% var features = featurizer.featurize(labels[i - 2] || starts[0], labels[i - 1] || starts[0], label, tokens, i) -%>
                        <span data-toggle="tooltip" data-placement="bottom" data-html="true" title="
                          <table>
                            <thead>
                              <tr><th></th><th><%= token %></th><th>v</th></tr>
                            </thead>
                            <tbody>
                              <% Object.keys(features).sort().forEach(function(name) { -%>
                                <tr>
                                  <th><%= name %></th>
                                  <td><%= features[name] %></td>
                                  <td><%= v.hash[name] || 0 %></td>
                                </tr>
                              <% }) -%>
                            </tbody>
                            <tfoot>
                              <tr><td></td><td colspan='2'><%= v.dot(features) %></td></tr>
                            </tfoot>
                          </table>
                        ">
                          <%= label %>
                        </span>
                      </td>
                    </tr>
                  <% }) -%>
                </tbody>
              </table>
            </td>
          <% }) -%>
        </tr>
      </table>
      <%
        tokens.forEach(function(token, i) {
          var labelsForPrevPrev = i - 2 < 0 ? ['START'] : labelss[i - 2],
              labelsForPrev     = i - 1 < 0 ? ['START'] : labelss[i - 1],
              labelsForCurrent  = labelss[i]
      -%>
        <div class="modal fade" id="token-<%= i %>" tabindex="-1" role="dialog" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <span class="modal-title">
                  <% tokens.forEach(function(token, t) { %>
                    <% if (t == i - 1 || t == i) { %>
                      <strong><%= token %></strong>
                    <% } else { %>
                      <%= token %>
                    <% } %>
                  <% }) %>
                </span>
              </div>
              <div class="modal-body">
                <table class="table table-condensed">
                  <thead>
                    <tr><td></td><td><strong><%= token %></strong></td></tr>
                    <tr>
                      <td><strong><%= tokens[i - 1] %></strong></th>
                      <td></td>
                      <% labelsForPrev.forEach(function(prev) { -%>
                        <td><%= prev %></td>
                      <% }) -%>
                    </tr>
                  </thead>
                  <tbody>
                    <% labelsForCurrent.forEach(function(current, k) { -%>
                      <tr>
                          <td></td>
                          <td><%= current %></td>
                        <%
                          labelsForPrev.forEach(function(prev, j) {
                            var idx = idx = i * X + k * Y + j,
                                features = featurizer.featurize(labels[i - 2] || starts[0], prev || starts[0], current, tokens, i)
                      -%>
                          <td class="<%= prev == labels[i - 1] && current == labels[i] ? 'success' : '' %>">
                            <span data-toggle="tooltip" data-placement="bottom" data-html="true" title="
                              <ol>
                                <li><%= (labelss[i - 2] || starts)[pointers[idx]] %></li>
                                <li><%= prev %></li>
                                <li><%= current %>
                              </ol>
                              <table>
                                <thead>
                                  <tr><th></th><th><%= token %></th><th>v</th></tr>
                                </thead>
                                <tbody>
                                  <% Object.keys(features).sort().forEach(function(name) { -%>
                                    <tr>
                                      <th><%= name %></th>
                                      <td><%= features[name] %></td>
                                      <td><%= v.hash[name] || 0 %></td>
                                    </tr>
                                  <% }) -%>
                                </tbody>
                                <tfoot>
                                  <tr><td></td><td colspan='2'><%= v.dot(features) %></td></tr>
                                </tfoot>
                              </table>
                            ">
                              <%= scores[idx] || 0 %>
                            </span>
                          </td>
                        <% }) -%>
                      </tr>
                    <% }) -%>
                  </tbody>
                </table>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% }) -%>
    <% } -%>
    <script src="//code.jquery.com/jquery.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.js"></script>
    <script>
      $('[data-toggle=tooltip]').tooltip()
    </script>
  </body>
</html>